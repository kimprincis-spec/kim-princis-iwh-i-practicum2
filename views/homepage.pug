doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 Pets

    a(href="/update-cobj") Add to this table

    if records.length === 0
      p No records found yet
    else
      table
        thead
          tr
            each prop in properties
              th= prop.label
        tbody
          each item in records
            tr
              each prop in properties
                td= item.properties[prop.name]
